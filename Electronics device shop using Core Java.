class SmartWatch extends Devices {

    int opt;

    public void SWatch() {

        // Upcasting & Downcasting
        Devices B1 = new BoAt();
        BoAt b = (BoAt) B1;

        Devices NO1 = new NOISE();
        NOISE No = (NOISE) NO1;

        Scanner sc = new Scanner(System.in);
        System.out.println("Enter 1 for BoAt");
        System.out.println("Enter 2 for NOISE");

        // Exception handling mechanism
        try {
            opt = sc.nextInt();
        } catch (InputMismatchException ie) {
            System.out.println("The Enter The Valid Input");
        }

        switch (opt) {
            case 1:
                System.out.println("You Have Choosen BoAt");
                b.Boat_watch();
                break;
            case 2:
                System.out.println("You Have Choosen NOISE");
                No.Noise_watch();
                break;

            default:
                System.out.println("Invaild Input ");
                SWatch();
                break;
        }
    }
}

class BoAt extends SmartWatch {
    int opt;

    public void Boat_watch() {

        // Upcasting & Downcasting
        Devices B2 = new bWatch1();
        bWatch1 b1 = (bWatch1) B2;

        Devices B3 = new bWatch2();
        bWatch2 b2 = (bWatch2) B3;

        Devices B4 = new bWatch3();
        bWatch3 b3 = (bWatch3) B4;

        Scanner sc = new Scanner(System.in);
        System.out.println("Enter 1 for boAt Wave Lite");
        System.out.println("Enter 2 for boAt Xtend(With Alexa)");
        System.out.println("Enter 3 for boAt Wave Call");

        // Exception handling mechanism
        try {
            opt = sc.nextInt();
        } catch (InputMismatchException ie) {
            System.out.println("Enter The Valid Input");
        }

        switch (opt) {
            case 1:
                System.out.println("You Have Choosen boAt Wave Lite1");
                b1.bWatch1_BT();
                break;
            case 2:
                System.out.println("You Have Choosen boAt Xtend(With Alexa)");
                b2.bWatch2_BT();
                break;
            case 3:
                System.out.println("You Have Choosen boAt Wave Call");
                b3.bWatch3_BT();
                break;

            default:
                System.out.println("Invaild Input ");
                Boat_watch();
                break;
        }
    }
}

