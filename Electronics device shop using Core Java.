class Vivo extends Phones {
    int opt;

    // Upcasting & Downcasting
    public void VI_Phone() {
        Devices V2 = new vMobile1();
        vMobile1 v1 = (vMobile1) V2;

        Devices V3 = new vMobile2();
        vMobile2 v2 = (vMobile2) V3;

        Devices V4 = new vMobile3();
        vMobile3 v3 = (vMobile3) V4;

        Scanner sc = new Scanner(System.in);
        System.out.println("Enter 1 for Vivo Y21");
        System.out.println("Enter 2 for Vivo V23 5G");
        System.out.println("Enter 3 for Vivo Y75");

        // Exception handling mechanism
        try {
            opt = sc.nextInt();
        } catch (InputMismatchException ie) {
            System.out.println("The Enter The Valid Input");
            System.out.println();
        }

        switch (opt) {
            case 1:
                System.out.println("You Have Choosen Vivo Y21");
                v1.vMobile1_VI();
                break;
            case 2:
                System.out.println("You Have Choosen Vivo V23 5G");
                v2.vMobile2_VI();
                break;
            case 3:
                System.out.println("You Have Choosen Vivo Y75");
                v3.vMobile3_VI();
                break;

            default:
                System.out.println("Invaild Input ");
                VI_Phone();
                break;
        }
    }
}

