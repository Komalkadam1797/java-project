class Samsung extends Phones {
    int opt;

    public void SAM_Phone() {

        // Upcasting-Downcasting for
        Devices S2 = new sMobile1();
        sMobile1 s1 = (sMobile1) S2;
        // Upcasting-Downcasting for
        Devices S3 = new sMobile2();
        sMobile2 s2 = (sMobile2) S3;
        // Upcasting-Downcasting for
        Devices S4 = new sMobile3();
        sMobile3 s3 = (sMobile3) S4;

        Scanner sc = new Scanner(System.in);
        System.out.println("Enter 1 for Samsung Galaxy M20");
        System.out.println("Enter 2 for Samsung Galaxy S20");
        System.out.println("Enter 3 for Samsung Galaxy S21");

        // Exception handling mechanism
        try {
            opt = sc.nextInt();
        } catch (InputMismatchException ie) {
            System.out.println("The Enter The Valid Input");
        }

        switch (opt) {
            case 1:
                System.out.println("You Have Choosen Samsung Galaxy M20");
                s1.sMobile1_SAM();
                break;
            case 2:
                System.out.println("You Have Choosen Samsung Galaxy S20");
                s2.sMobile2_SAM();
                break;
            case 3:
                System.out.println("You Have Choosen Samsung Galaxy S21");
                s3.sMobile3_SAM();
                break;

            default:
                System.out.println("Invaild Input ");
                SAM_Phone();
                break;
        }
    }
}

