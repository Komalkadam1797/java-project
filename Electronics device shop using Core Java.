class APPLE extends Phones {

    int opt;

    // Upcasting & Downcasting
    public void I_Phone() {
        Devices I2 = new iMobile1();
        iMobile1 i1 = (iMobile1) I2;

        Devices I3 = new iMobile2();
        iMobile2 i2 = (iMobile2) I3;

        Devices I4 = new iMobile3();
        iMobile3 i3 = (iMobile3) I4;

        Devices I5 = new iMobile4();
        iMobile4 i4 = (iMobile4) I5;

        Devices I6 = new iMobile5();
        iMobile5 i5 = (iMobile5) I6;

        Scanner sc = new Scanner(System.in);
        System.out.println("Enter 1 for Apple iPhone XR");
        System.out.println("Enter 2 for Apple iPhone SE");
        System.out.println("Enter 3 for Apple iPhone 11");
        System.out.println("Enter 4 for Apple iPhone 12");
        System.out.println("Enter 5 for Apple iPhone 13");

        // Exception handling mechanism
        try {
            opt = sc.nextInt();
        } catch (InputMismatchException ie) {
            System.out.println("The Enter The Valid Input");
        }

        switch (opt) {
            case 1:
                System.out.println("You Have Choosen Apple iPhone XR");
                i1.iMobile1_iP();
                break;
            case 2:
                System.out.println("You Have Choosen Apple iPhone SE");
                i2.iMobile2_iP();
                break;
            case 3:
                System.out.println("You Have Choosen Apple iPhone 11");
                i3.iMobile3_iP();
                break;
            case 4:
                System.out.println("You Have Choosen Apple iPhone 12");
                i4.iMobile4_iP();
                break;
            case 5:
                System.out.println("You Have Choosen Apple iPhone 13");
                i5.iMobile5_iP();
                break;

            default:
                System.out.println("Invaild Input ");
                I_Phone();
                break;
        }
    }
