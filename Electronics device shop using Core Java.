import java.util.InputMismatchException;
import java.util.Scanner;

class Mobileshop {
}

interface Payment {
    public void getDetails();
}

class Devices implements Payment {
    String Dev_Name;
    String Dev_Colour;
    double Dev_Price;
    private String Dev_Owner_Name;
    private long Owner_Mobile_Number;
    private String Owner_EmailAdd;
    private String Owner_AadharNo;
    private String Owner_PanNo;

    // getter and setter method

    public void setDev_Owner_Name(String Dev_Owner_Name) {
        this.Dev_Owner_Name = Dev_Owner_Name;
    }

    public String getDev_Owner_Name() {
        return Dev_Owner_Name;
    }

    public void setOwner_Mobile_Number(long Owner_Mobile_Number) {
        this.Owner_Mobile_Number = Owner_Mobile_Number;
    }

    public long getOwner_Mobile_Number() {
        return Owner_Mobile_Number;
    }

    public void setOwner_EmailAdd(String Owner_EmailAdd) {
        this.Owner_EmailAdd = Owner_EmailAdd;
    }

    public String getOwner_EmailAdd() {
        return Owner_EmailAdd;
    }

    public void setOwner_AadharNo(String Owner_AadharNo) {
        this.Owner_AadharNo = Owner_AadharNo;
    }

    public String getOwner_AadharNo() {
        return Owner_AadharNo;
    }

    public void setOwner_PanNo(String Owner_PanNo) {
        this.Owner_PanNo = Owner_PanNo;
    }

    public String getOwner_PanNo() {
        return Owner_PanNo;
    }

    public void Pass(String Dev_Name, String Dev_Colour, double Dev_Price) {

        this.Dev_Name = Dev_Name;
        this.Dev_Colour = Dev_Colour;
        this.Dev_Price = Dev_Price;
    }

    @Override
    public void getDetails() {
        System.out.println("Device Name           :" + Dev_Name);
        System.out.println("Device Colour         :" + Dev_Colour);
        System.out.println("Device Price          :" + Dev_Price);
        System.out.println("Device Owner Name     :" + Dev_Owner_Name);
        System.out.println("Owner Mobile Number    :" + Owner_Mobile_Number);
        System.out.println("Owner Email Address    :" + Owner_EmailAdd);
        System.out.println("Owner Aadhar Number    :" + Owner_AadharNo);
        System.out.println("Owner Pan Number       :" + Owner_PanNo);
    }

    public void On() {
        System.out.println("Switch On The Device");
    }

    public void Off() {
        System.out.println("Switch Off The Device");
    }

    public void Function() {
        System.out.println("Device Is Functional");
    }

}

class Details {
    int opt;
    private static final String Dev = null;

    public void Final_Details(String M_Name, String M_Colour, double M_Price) {
        Devices DE = new Devices();
        System.out.println("Choose Payment Option\n");
        System.out.println("To Pay With Cheque Press 1");
        System.out.println("To Pay With NEFT Press 2");
        System.out.println("To Pay With EMI Press 3");

        Scanner sc = new Scanner(System.in);

        // Exception handling mechanism

        try {
            opt = sc.nextInt();
        } catch (InputMismatchException ie) {
            System.out.println("The Enter The Valid Input");
        }

        switch (opt) {
            case 1:
                System.out.println("You Have Choosen Payment Through Cheque");
                break;

            case 2:
                System.out.println("You Have Choosen Payment option NEFT");
                break;

            case 3:
                System.out.println("You Have Choosen Payment option EMI");
                break;

            default:
                System.out.println("Invaild Input ");
                Final_Details(M_Name, M_Colour, M_Price);
                break;
        }

        System.out.println("Enter Your Name\n");
        sc.nextLine();
        String oname = sc.nextLine();
        DE.setDev_Owner_Name(oname);
        System.out.println();

        System.out.println("Enter Your Mobile Number\n");
        Long omobno = sc.nextLong();
        DE.setOwner_Mobile_Number(omobno);
        sc.nextLine();

        System.out.println("Enter Your Email Id Number\n");
        String oemail = sc.nextLine();
        DE.setOwner_EmailAdd(oemail);
        System.out.println();

        System.out.println("Enter Your Aadhar Card Number\n");
        String oaadharno = sc.nextLine();
        DE.setOwner_AadharNo(oaadharno);
        System.out.println();

        System.out.println("Enter Your Pan Card Number\n");
        String opanno = sc.nextLine();
        DE.setOwner_PanNo(opanno);
        System.out.println();

        DE.Pass(M_Name, M_Colour, M_Price);
        DE.getDetails();

        System.out.println("");
        System.out.println("Thank You For Purchasing a Device From Our Shope...!!!");
        System.out.println("Have a great Day Sir/Ma'am");
        System.out.println("");

        // DE.On();
        // DE.Off();
        // DE.Function();

    }
}

class Phones extends Devices {
    int opt;

    public void PBrand() {

        // Upcasting and Downcasting

        Devices d2 = new Nokia();
        Nokia N1 = (Nokia) d2;

        Devices S1 = new Samsung();
        Samsung s = (Samsung) S1;

        Devices V1 = new Vivo();
        Vivo v = (Vivo) V1;

        Devices O1 = new OnePlus();
        OnePlus o = (OnePlus) O1;

        Devices R1 = new MI();
        MI r = (MI) R1;

        Devices OP1 = new OPPO();
        OPPO op = (OPPO) OP1;

        Devices I1 = new APPLE();
        APPLE i = (APPLE) I1;

        Scanner sc = new Scanner(System.in);
        System.out.println("Enter 1 for Nokia");
        System.out.println("Enter 2 for Samsung");
        System.out.println("Enter 3 for Vivo");
        System.out.println("Enter 4 for OnePlus");
        System.out.println("Enter 5 for MI");
        System.out.println("Enter 6 for OPPO");
        System.out.println("Enter 7 for APPLE");

        // Exception handling
        try {
            opt = sc.nextInt();
        } catch (InputMismatchException ie) {
            System.out.println("The Enter The Valid Input");
        }

        switch (opt) {
            case 1:
                System.out.println("You Have Choosen Nokia");
                N1.Nokia_Phone();
                break;
            case 2:
                System.out.println("You Have Choosen Samsung");
                s.SAM_Phone();
                break;

            case 3:
                System.out.println("You Have Choosen Vivo");
                v.VI_Phone();
                break;
            case 4:
                System.out.println("You Have Choosen OnePlus");
                o.ONE_Phone();
                break;

            case 5:
                System.out.println("You Have Choosen Redmi-MI");
                r.MI_Phone();
                break;
            case 6:
                System.out.println("You Have Choosen OPPO");
                op.OP_Phone();
                break;
            case 7:
                System.out.println("You Have Choosen APPLE");
                i.I_Phone();
                break;

            default:
                System.out.println("Invaild Input ");
                PBrand();
                break;
        }
    }
}

class Nokia extends Phones {
    int opt;

    public void Nokia_Phone() {
        // Upcasting-Downcasting for Nokia1
        Devices M1 = new Mobile1();
        Mobile1 m1 = (Mobile1) M1;

        // Upcasting-Downcasting for Nokia2
        Devices M2 = new Mobile2();
        Mobile2 m2 = (Mobile2) M2;

        // Upcasting-Downcasting for Nokia3
        Devices M3 = new Mobile3();
        Mobile3 m3 = (Mobile3) M3;

        Scanner sc = new Scanner(System.in);
        System.out.println("Enter 1 for Nokia 6.1 Plus");
        System.out.println("Enter 2 for Nokia 5.1");
        System.out.println("Enter 3 for Nokia C2");

        // Exception handling mechanism
        try {
            opt = sc.nextInt();
        } catch (InputMismatchException ie) {
            System.out.println("The Enter The Valid Input");
        }

        switch (opt) {
            case 1:
                System.out.println("You Have Choosen Nokia 6.1 Plus");
                m1.Mobile1_Nokia();
                break;
            case 2:
                System.out.println("You Have Choosen Nokia 5.1");
                m2.Mobile2_Nokia();
                break;
            case 3:
                System.out.println("You Have Choosen Nokia C2");
                m3.Mobile3_Nokia();
                break;

            default:
                System.out.println("Invaild Input ");
                Nokia_Phone();
                break;
        }
    }
}

class Mobile1 extends Nokia {
    int opt;

    public void Mobile1_Nokia() {
        Details d = new Details();
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter 1 for Nokia 6.1 Plus Black");
        System.out.println("Enter 2 for Nokia6.1 Plus Navy Blue");

        // Exception handling mechanism
        try {
            opt = sc.nextInt();
        } catch (InputMismatchException ie) {
            System.out.println("The Enter The Valid Input");
        }

        switch (opt) {
            case 1:
                System.out.println("Mobile Name:Nokia 6.1 Plus");
                System.out.println("Main Cammera:16 MP");
                System.out.println("Front Cammera:16 MP");
                System.out.println("Mammory:64 GB");
                System.out.println("Ram:6 GB");
                System.out.println("Colour:Black");
                System.out.println("Price:18,990");
                System.out.println();
                d.Final_Details("Nokia 6.1 Plus", "Black", 18990);
                break;
            case 2:
                System.out.println("Mobile Name:Nokia 6.1 Plus");
                System.out.println("Main Cammera:16 MP");
                System.out.println("Front Cammera:16 MP");
                System.out.println("Mammory:64 GB");
                System.out.println("Ram:6 GB");
                System.out.println("Colour:Navy Blue");
                System.out.println("Price: 18,990");
                d.Final_Details("Nokia 6.1 Plus", "Navy Blue", 18990);
                break;

            default:
                System.out.println("Invaild Input ");
                Mobile1_Nokia();
                break;
        }
    }
}

