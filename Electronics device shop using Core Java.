        System.out.println("Enter 1 for OnePlus Nord CE");
        System.out.println("Enter 2 for OnePlus 10T");
        System.out.println("Enter 3 for OnePlus 10R");

        // Exception handling mechanism
        try {
            opt = sc.nextInt();
        } catch (InputMismatchException ie) {
            System.out.println("The Enter The Valid Input");
        }

        switch (opt) {
            case 1:
                System.out.println("You Have Choosen OnePlus Nord CE");
                o1.oMobile1_One();
                break;
            case 2:
                System.out.println("You Have Choosen OnePlus 10T");
                o2.oMobile2_One();
                break;
            case 3:
                System.out.println("You Have Choosen OnePlus 10R");
