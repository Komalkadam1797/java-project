class NOISE extends SmartWatch {
    int opt;

    public void Noise_watch() {

        // Upcasting & Downcasting
        Devices NO2 = new NoWatch1();
        NoWatch1 No1 = (NoWatch1) NO2;

        Devices NO3 = new NoWatch2();
        NoWatch2 No2 = (NoWatch2) NO3;

        Devices NO4 = new NoWatch3();
        NoWatch3 No3 = (NoWatch3) NO4;

        Scanner sc = new Scanner(System.in);
        System.out.println("Enter 1 for Noise ColorFit Ultra 2 Buzz");
        System.out.println("Enter 2 for Noise ColorFit Pro 4");
        System.out.println("Enter 3 for Noise ColorFit Pulse");

        // Exception handling mechanism
        try {
            opt = sc.nextInt();
        } catch (InputMismatchException ie) {
            System.out.println("The Enter The Valid Input");
        }
        switch (opt) {
            case 1:
                System.out.println("You Have Choosen Noise ColorFit Ultra 2 Buzz");
                No1.NoWatch1_NO();
                break;
            case 2:
                System.out.println("You Have Choosen Noise ColorFit Pro 4");
                No2.NoWatch2_NO();
                break;
            case 3:
                System.out.println("You Have Choosen Noise ColorFit Pulse");
                No3.NoWatch3_NO();
                break;

            default:
                System.out.println("Invaild Input ");
                Noise_watch();
                break;
        }
    }
}

