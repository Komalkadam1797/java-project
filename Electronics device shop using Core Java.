class Electronics_device {
    public static void main(String[] args) {

        // Upcasting & Downcasting
        Phones d1 = new Phones();
        Phones p = (Phones) d1;
        System.out.println("Press 1 For Phones");

        Devices D1 = new SmartWatch();
        SmartWatch w = (SmartWatch) D1;
        System.out.println("Press 2 For SmartWatch");

        Scanner sc = new Scanner(System.in);
        int a = 0;

        // Exception handling mechanism
        try {
            a = sc.nextInt();
        } catch (InputMismatchException ie) {
            System.out.println("The Enter The Valid Input");
            System.out.println();
        }

        switch (a) {
            case 1:
                System.out.println("You Have Choosen Phone");
                p.PBrand();
                break;
            case 2:
                System.out.println("You Have Choosen SmartWatch");
                w.SWatch();
                break;

            default:
                System.out.println("Invaild Input :)");
                System.out.println();
                main(args);
                break;
        }
    }

    static {
        System.out.println("Welcome To Our Shope");
        System.out.println("May I Help You");
        System.out.println("Which Device Should You Buy??");
        System.out.println("======================================");
    }
}
